        <ImageView
            android:id="@+id/iv_Youm7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:src="@android:drawable/ic_input_add"
            android:text="youm 7" />

    </RelativeLayout>

</LinearLayout>